<h2 ><h1 style="text-align:center">All Posts of <%= @shark.name %></h1> </h2>
<br>
<% i=0 %>
<% @posts.each do |post| %>
    <%= i=i+1 %>
    <p><b> Content:</b><br> <%= post.content %></p>
    <%= link_to 'Edit Post', edit_shark_post_path(@shark, post) %>
    <%= link_to 'Delete Post', shark_post_path(@shark, post), method: :delete %>
    <%= button_to 'Delete',  shark_post_path(@shark, post),  method: :delete %>
    <hr />
    
<% end %>

<%= link_to 'New Post', new_shark_post_path(@shark) %>








